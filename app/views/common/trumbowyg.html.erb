
<div id="trumbowyg">
<%= yield :trumbowyg_content %>
</div>

<% content_for :stylesheets do %>
<%= stylesheet_link_tag "trumbowyg" %>
<% end %>

<% content_for :javascripts do %> 
<%= javascript_include_tag "trumbowyg" %>
<script type='text/javascript'>
(function(scope){
var btnsGrps = jQuery.trumbowyg.btnsGrps;
$('#trumbowyg').trumbowyg({
  fullscreenable: false,
  btns: ['viewHTML',
           '|', 'formatting',
           '|', btnsGrps.design,
           '|', 'link',
           '|', btnsGrps.justify,
           '|', btnsGrps.lists,
           '|', 'insertHorizontalRule']});
})(window);
</script>
<% end %>


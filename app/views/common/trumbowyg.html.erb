
<div id="trumbowyg">
<%= yield :trumbowyg_content %>
</div>

<% content_for :stylesheets do %>
<%= stylesheet_link_tag "trumbowyg/dist/ui/trumbowyg.min.css" %>
<% end %>

<% content_for :javascripts do %> 
<%= javascript_include_tag "trumbowyg/dist/trumbowyg.min.js" %>
<script type='text/javascript'>
(function(scope){
$('#trumbowyg').trumbowyg();
})(window);
</script>
<% end %>


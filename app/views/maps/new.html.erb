<%= render :partial => "maps/map" %>

<div id="over_map_form" style="position: fixed;right: 100px;top: 150px;background-color: #b0c4de;padding:50px;height:500px">
  <%= simple_form_for(@shifu) do |f| %>
  <% if @shifu.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@shifu.errors.count, "error") %> prohibited this shifu from being saved:</h2>

    <ul>
      <% @shifu.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= f.input_field :name ,placeholder: '師父姓名',:required => true, maxlength: 20 %>
  </div>
  <br>
  <div class="field">
    <%= f.input_field :phone,placeholder: '電話',:required => true,maxlength: 20 %>
  </div>
  <br>
  <div class="field">
    <%= f.input_field :address,placeholder: '地址',maxlength: 20 %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit '送出' %>
  </div>
  <% end %>
</div>



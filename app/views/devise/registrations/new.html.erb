<h2><%= t('.sign_up', default: 'Sign up') %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification class: 'alert alert-danger' %>

  <div class="form-inputs">
    <%= f.input :email, autofocus: true, autocomplete: 'off', required: true %>
    <%= f.input :name, :required => true, autofocus: true, label: t('.name')  %>
    <%= f.input :password, autocomplete: 'off', required: true, label: t('.password') %>
    <%= f.input :password_confirmation, autocomplete: 'off', label: "* #{t('.password_confirmation')}" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('.sign_up', default: 'Sign up'), class: 'btn btn-primary'%>
  </div>
<% end %>

<%= render 'devise/shared/links' %>

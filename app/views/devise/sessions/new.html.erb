<h2><%= t('.sign_in', default: 'Sign in') %></h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: :signin }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, autofocus: true, required: true %>
    <%= f.input :password, required: true, label: t('.password') %>
    <%= f.input_field :remember_me,inline_label:  t('.remember_me', default: 'Remember me') , as: :boolean if devise_mapping.rememberable? %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, t('.sign_in', default: 'Sign in'), class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
